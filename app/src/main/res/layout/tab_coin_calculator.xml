<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/layBack"
        android:padding="@dimen/p10"
        android:background="@drawable/bg_rounded_blue_stroke"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/p30"
            android:layout_marginLeft="@dimen/p20"
            android:layout_marginRight="@dimen/p20"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center|right"
                android:hint="거래단가"
                android:focusableInTouchMode="true"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textSize="@dimen/p50" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/p20"
            android:layout_marginTop="@dimen/p30"
            android:layout_marginRight="@dimen/p20"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center|right"
                android:hint="거래수량"
                android:focusableInTouchMode="true"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textSize="@dimen/p50" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/p20"
            android:layout_marginTop="@dimen/p30"
            android:layout_marginRight="@dimen/p20"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center|right"
                android:hint="거래금액"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:textSize="@dimen/p50" />
        </android.support.design.widget.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/p20"
            android:layout_marginRight="@dimen/p20"
            android:layout_height="@dimen/p130"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center"
                android:text="수수료"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/p50" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center|right"
                android:text="123,123원"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/p50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/p130"
            android:layout_marginLeft="@dimen/p20"
            android:layout_marginRight="@dimen/p20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center"
                android:text="정산금액"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/p50" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center|right"
                android:text="123,123,123원"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/p50" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인" />

    </LinearLayout>

</layout>