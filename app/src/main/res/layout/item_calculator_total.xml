<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/p20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/p20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/p50"
                android:layout_marginTop="@dimen/p50"
                android:fontFamily="@font/nanumsquare_r"
                android:gravity="center"
                android:text="123,123,123원"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/p180" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/p30"
                    android:fontFamily="@font/nanumsquare_r"
                    android:text="수익률"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p80" />

                <TextView
                    android:id="@+id/txtCalNum"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/p30"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:text="+ 300%"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/p80" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/p30"
                    android:fontFamily="@font/nanumsquare_r"
                    android:text="평가손익"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p80" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/p30"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:text="-123,456원"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/p80" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/p30"
                    android:fontFamily="@font/nanumsquare_r"
                    android:text="보유수량 123 ADA"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p60" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/p30"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:text="매수금액 123원"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p60" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/p30"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:text="매수평균가 123원"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p60" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnInfoExpened"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/p30"
                    android:background="@drawable/ic_expand_more"
                    android:foreground="?android:attr/selectableItemBackground" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p30"
                android:visibility="gone"
                app:layoutManager="LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".view.MainActivity" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</layout>