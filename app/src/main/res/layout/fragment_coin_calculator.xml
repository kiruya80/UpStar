<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/p600"
                android:layout_marginLeft="@dimen/p30"
                android:layout_marginRight="@dimen/p30"
                android:layout_marginTop="@dimen/p30">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p300"
                        android:layout_marginLeft="@dimen/p20"
                        android:layout_marginRight="@dimen/p20"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgIcon"
                            android:layout_width="@dimen/p200"
                            android:layout_height="@dimen/p200"
                            app:srcCompat="@drawable/ic_bitcoin" />

                        <TextView
                            android:id="@+id/txtCoinName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginLeft="@dimen/p20"
                            android:fontFamily="@font/nanumsquare_r"
                            android:text="에이다 (ADA)"
                            android:textSize="@dimen/p150" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtCal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/p30"
                        android:fontFamily="@font/nanumsquare_r"
                        android:text="수익률"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/p100" />

                    <TextView
                        android:id="@+id/txtCalNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/p30"
                        android:fontFamily="@font/nanumsquare_r"
                        android:text="+ 300%"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/p130" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>