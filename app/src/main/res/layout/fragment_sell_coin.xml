<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ulling.upstar.view.SellCoinFragment">

        <LinearLayout
            android:id="@+id/layBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rounded_blue_stroke"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/p10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p20"
                android:layout_marginRight="@dimen/p20"
                android:layout_marginTop="@dimen/p30"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textTotalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:layout_marginRight="@dimen/p20"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p55" />

                <Button
                    android:id="@+id/btnChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/p30"
                    android:text="수량으로 계산" />
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p20"
                android:layout_marginRight="@dimen/p20"
                android:layout_marginTop="@dimen/p20">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editAverage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:hint="거래단가"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/p55"
                    android:theme="@style/SellTextInputEditText" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p20"
                android:layout_marginRight="@dimen/p20"
                android:visibility="gone"
                android:layout_marginTop="@dimen/p20">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:hint="거래수량"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/p55"
                    android:theme="@style/SellTextInputEditText" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p20"
                android:layout_marginRight="@dimen/p20"
                android:layout_marginTop="@dimen/p30">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:hint="거래금액"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/p55"
                    android:theme="@style/SellTextInputEditText" />
            </android.support.design.widget.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/p20"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/p20"
                android:layout_marginRight="@dimen/p20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center"
                    android:text="수수료"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p50" />

                <TextView
                    android:id="@+id/textCharge"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:text="123,123원"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p55" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/p20"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/p20"
                android:layout_marginRight="@dimen/p20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center"
                    android:text="정산금액"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p50" />

                <TextView
                    android:id="@+id/textTotalPrice"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquare_r"
                    android:gravity="center|right"
                    android:text="123,123,123원"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/p55" />
            </LinearLayout>

            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="확인" />

        </LinearLayout>

    </FrameLayout>
</layout>
